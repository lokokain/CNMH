
<section id="service">
    <div class="container">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="service_area">
          <div class="service_title">
            <h2>Usuarios</h2>



<table align="center" class="table-bordered table-responsive">
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Tipo de Usuario</th>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.usuario %></td>
        <td><%= user.tpusu %></td>
        <td><%= user.nombre %></td>
        <td><%= user.apellido %></td>

        <%if (user.usuario != "Administrador") %>
          
        <%if (current_user.tpusu !="Observador") %>
        <td><%= link_to 'Editar', edit_user_path(user) ,:class => "btn btn-default"%></td>
        <% end -%>
        <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Esta Seguro ?' }, :class => "btn btn-danger", :style => "color:white;" %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Usuario', new_user_path, :class => "btn btn-info" %>





        </div>
      </div>
    </div>
    </div>
  </section>