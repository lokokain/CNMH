<p id="notice"><%= notice %></p>
<section id="service">
    <div class="container">
      <div class="col-lg-12 col-md-12 col-sm-12">
<h1>Anexos</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Idinforme</th>
      <th>Descripcion</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @archivos.where("idinforme =#{params[:informeid]}" ).find_each do |archivo| %>
      <tr>
        <td><%= archivo.idinforme %></td>
        <td><%= archivo.descripcion %></td>
        <td><%= archivo.title %></td>
        <td><%= link_to 'Descargar', archivo %></td>
        
        <td><%= link_to 'Eliminar', archivo, method: :delete, data: { confirm: 'Esta Seguro ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Nuevo Anexo", {:controller => "archivos", :action => "new", :informeid => "#{params[:informeid]}", :casoid => "#{params[:casoid]}" }, :class => "btn btn-default"%>
<%= link_to "Volver", {:controller => "informes", :action => "index", :casoid => "#{params[:casoid]}" }, :class => "btn btn-default"%>

</div>
</div>
</section>